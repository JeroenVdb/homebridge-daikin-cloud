{
  "pluginAlias": "DaikinCloud",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "clientId": {
        "title": "Client ID",
        "type": "string",
        "required": true,
        "default": ""
      },
      "clientSecret": {
        "title": "Client Secret",
        "type": "string",
        "required": true,
        "default": ""
      },
      "authenticationToken": {
        "title": "Authentication Token",
        "type": "string",
        "required": false,
        "default": ""
      },
      "accessToken": {
        "title": "Access Token",
        "type": "string",
        "required": false,
        "default": ""
      },
      "refreshToken": {
        "title": "Refresh Token",
        "type": "string",
        "required": false,
        "default": ""
      },
      "showExtraFeatures": {
        "title": "Show advanced features",
        "type": "boolean",
        "required": false,
        "default": false,
        "description": "Expose extra advanced features as streamer mode, econo mode and powerful mode. They will only appear when they are also supported by your device."
      },
      "excludedDevicesByDeviceId": {
        "title": "Exclude specific devices",
        "type": "array",
        "items": {
          "title": "Device id",
          "type": "string"
        },
        "description": "Exclude specific devices by their device id. You can find the device id in the Homebridge logs (debug mode does not have to be on)"
      }
    }
  }
}
